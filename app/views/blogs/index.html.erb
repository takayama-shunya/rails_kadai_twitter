<!DOCTYPE html>
<html>
  <head>
    <title>twitter_clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p><%= notice %></p>
    <main>
      <h1>ツイート一覧</h1>
      <table>
        <tr>
          <th>内容</th>
          <th>ツイート日時</th>
        </tr>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.content %></td>
          <td><%= l blog.created_at %></td>
          <td><%= link_to '編集', edit_blog_path(blog.id), 
                  date: { confirm: '本当に編集して良いですか？'} %></td>
          <td><%= link_to '削除', blog_path(blog.id),
                  method: :delete, data: { confirm: '本当に削除していいですか？'} %></td>
        </tr>
      <% end %>
      </table>
      </main>
    <%= link_to 'ツイート作成', new_blog_path %>

  </body>
</html>
